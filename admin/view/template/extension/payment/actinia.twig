{{ header }}{{ column_left }}
<div id="content">
    <div class="page-header">
        <div class="container-fluid">
            <div class="pull-right">
                <button type="submit" form="form" data-toggle="tooltip" title="{{ button_save }}"
                        class="btn btn-primary"><i class="fa fa-save"></i></button>
                <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i
                            class="fa fa-reply"></i></a></div>
            <h1><img src="view/image/payment/actinia_logo.png"
                     style="height:25px; margin-top:-5px;"/> {{ heading_title }}
            </h1>
            <ul class="breadcrumb">
                {% for breadcrumb in breadcrumbs %}
                    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <div class="container-fluid">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"><i class="fa fa-pencil"></i>{{ text_edit }}</h3>
            </div>
            <div class="panel-body">
                <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form">

                    <div class="row">
                        <div class="col-12 col-md-5">
                            <div class="form-group required">
                                <label class="control-label">Upload PrivateKey</label>
                                <input type="file" name="payment_actinia_prkey"
                                       value="{{ prkey_actinia }}"
                                       class="form-control"/>
                                {% if error_prkey %}
                                    <span class="error">{{ error_prkey }}</span>
                                {% endif %}
                            </div>
                            <div class="form-group required">
                                <label class="control-label">{{ entry_merchant }}</label>
                                <input type="text" name="payment_actinia_merchant"
                                       value="{{ payment_actinia_merchant }}"
                                       class="form-control"/>
                                {% if error_merchant %}
                                    <span class="error">{{ error_merchant }}</span>
                                {% endif %}
                            </div>
                            <div class="form-group required">
                                <label class="control-label">{{ entry_clientcodename }}</label>
                                <input type="text" name="payment_actinia_clientcodename"
                                       value="{{ payment_actinia_clientcodename }}"
                                       class="form-control"/>
                                {% if error_clientcodename %}
                                    <span class="error">{{ error_clientcodename }}</span>
                                {% endif %}
                            </div>
                            <div class="form-group required">
                                <label class="control-label">{{ entry_clientaccountid }}</label>
                                <input type="text" name="payment_actinia_clientaccountid"
                                       value="{{ payment_actinia_clientaccountid }}"
                                       class="form-control"/>
                                {% if error_clientaccountid %}
                                    <span class="error">{{ error_clientaccountid }}</span>
                                {% endif %}
                            </div>
                            <div class="form-group">
                                <label class="control-label">{{ entry_currency }}</label>
                                <select name="payment_actinia_currency" class="form-control">
                                    {% for payment_actinia_currenc in payment_actinia_currencyc %}
                                        {% if payment_actinia_currenc == payment_actinia_currency %}
                                            <option value="{{ payment_actinia_currenc }}"
                                                    selected="selected">{{ payment_actinia_currenc }}</option>
                                        {% else %}
                                            <option value="{{ payment_actinia_currenc }}">{{ payment_actinia_currenc }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group ">
                                <label class="control-label"><span data-toggle="tooltip"
                                                                   title="{{ entry_help_lang }}"> {{ entry_language }}</span></label>
                                    <input type="text" name="payment_actinia_language"
                                           value="{{ payment_actinia_language }}"
                                           class="form-control"/>
                            </div>
                            <div class="form-group">
                                <label class="control-label" for="input-geo-zone">{{ entry_geo_zone }}</label>
                                <select name="payment_actinia_geo_zone_id" id="input-geo-zone" class="form-control">
                                    <option value="0">{{ text_all_zones }}</option>
                                    {% for geo_zone in geo_zones %}
                                        {% if geo_zone.geo_zone_id == payment_actinia_geo_zone_id %}
                                            <option value="{{ geo_zone.geo_zone_id }}"
                                                    selected="selected">{{ geo_zone.name }}</option>
                                        {% else %}
                                            <option value="{{ geo_zone.geo_zone_id }}">{{ geo_zone.name }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>

                        </div>
                        <div class="col-12 col-md-6 col-md-offset-1">
                            <div class="form-group text-primary">
                                <label class="control-label" for="input-status">{{ entry_status }}</label>
                                <select name="payment_actinia_status" id="input-status" class="form-control">
                                    {% if payment_actinia_status %}
                                        <option value="1" selected="selected">{{ text_enabled }}</option>
                                        <option value="0">{{ text_disabled }}</option>
                                    {% else %}
                                        <option value="1">{{ text_enabled }}</option>
                                        <option value="0" selected="selected">{{ text_disabled }}</option>
                                    {% endif %}
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="control-label" for="input-order-status">{{ entry_order_status }}</label>
                                <select name="payment_actinia_order_status_id" id="input-order-status"
                                        class="form-control">
                                    {% for order_status in order_statuses %}
                                        {% if order_status.order_status_id == payment_actinia_order_status_id %}
                                            <option value="{{ order_status.order_status_id }}"
                                                    selected="selected">{{ order_status.name }}</option>
                                        {% else %}
                                            <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="control-label"
                                       for="input-order-status">{{ entry_order_status_cancelled }}</label>
                                <select name="payment_actinia_order_cancelled_status_id" id="input-order-status"
                                        class="form-control">
                                    {% for order_status in order_statuses %}
                                        {% if order_status.order_status_id == payment_actinia_order_cancelled_status_id %}
                                            <option value="{{ order_status.order_status_id }}"
                                                    selected="selected">{{ order_status.name }}</option>
                                        {% else %}
                                            <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="form-group">
                                <label class="control-label"
                                       for="input-order-status">{{ entry_order_process_status }}</label>
                                <select name="payment_actinia_order_process_status_id" id="input-order-status"
                                        class="form-control">
                                    {% for order_status in order_statuses %}
                                        {% if order_status.order_status_id == payment_actinia_order_process_status_id %}
                                            <option value="{{ order_status.order_status_id }}"
                                                    selected="selected">{{ order_status.name }}</option>
                                        {% else %}
                                            <option value="{{ order_status.order_status_id }}">{{ order_status.name }}</option>
                                        {% endif %}
                                    {% endfor %}
                                </select>
                            </div>

                        </div>
                    </div>


                </form>
            </div>
        </div>
    </div>
{{ footer }}